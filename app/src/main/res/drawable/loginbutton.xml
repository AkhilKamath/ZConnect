<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape>
        <solid
            android:color="#e3acde" />
        <stroke
            android:width="1dp"
            android:color="#871276" />
        <corners
            android:radius="6dp" />
        <padding
            android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp" />
    </shape>
</item>

    <item>
        <shape>
            <gradient
                android:startColor="#e3acde"
                android:endColor="#e3ccac"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#871276" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

</selector>